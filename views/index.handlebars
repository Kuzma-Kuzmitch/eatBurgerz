<h1>Meat & Bunz!</h1>

<div id="unEaten">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-devour devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div id="eaten" class="float-left">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-devour devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>


<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Place your order!</button>
</form>
