<div class="container clearfix">
<h1 class="text-center mt-2">Meat & Bunz!</h1>

<div id="unEaten">
<h2>Good Stuff</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-devour devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>


<div id="eaten" class="">
<h2>Gross Stuff</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-devour devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="text-center">
<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group text-center">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
    <button type="submit">Place your order!</button>
  </div>

  <!-- <button type="submit">Place your order!</button> -->
</form>
</div>
</div>
